
.index-card{
    border-radius:  0.5rem;
    margin: auto
    max-width 700px;
    box-shadow: var(--shadow)
    padding: 28px;
    margin-bottom: 1.8rem;
    padding-top: 5px; 
    background-color: var(--post-bkg-color)
}

.index-card{
    a{
        color: var(--first-text-color);
    }
}
